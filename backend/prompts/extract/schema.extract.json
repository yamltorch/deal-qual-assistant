{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inno.dev/deal-qual-assistant/schema/extract-response.json",
  "title": "ExtractResponse",
  "description": "JSON-контракт ответа LLM-экстрактора фактов для BANT/MED2IC3.",
  "type": "array",
  "minItems": 0,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "letter",
      "facet",
      "value",
      "confidence",
      "source",
      "evidence",
      "ts"
    ],
    "properties": {
      "letter": {
        "type": "string",
        "enum": ["B", "A", "N", "T", "M", "E", "D1", "D2", "I", "C1", "C2", "C3"]
      },
      "facet": {
        "type": "string",
        "minLength": 1
      },
      "value": {
        "type": ["object", "array", "string", "number", "boolean", "null"]
      },
      "confidence": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0
      },
      "source": {
        "type": "string",
        "enum": ["crm", "chat", "text"]
      },
      "evidence": {
        "type": "string",
        "minLength": 1
      },
      "ts": {
        "anyOf": [
          {
            "type": "string",
            "format": "date-time"
          },
          {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          {
            "type": "null"
          }
        ]
      }
    }
  }
}
